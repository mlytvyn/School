<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= form_tag users_path, :method => "get" do %>
  <%= label_tag :search, "Search for:" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
<% end %>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>