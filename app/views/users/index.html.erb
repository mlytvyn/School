<% provide(:title, 'All ' + params[:user_type] + 's') %>
<h1>All <%= params[:user_type]%>s</h1>

<%= will_paginate class: "pagination pagination-centered"%>

<%= form_tag users_path, class: "form-search", method: "get" do %>
  <%= hidden_field_tag 'user_type', params[:user_type] %>
  <div class="input-prepend">
    <%= submit_tag "Filter by name", :name => nil, class: "btn btn-info" %>
    <%= text_field_tag :search, params[:search], class: "search-query" %>
  </div>
<% end %>

<ul class="paginable-list">
  <%= render @users %>
</ul>

<%= will_paginate class: "pagination pagination-centered" %>